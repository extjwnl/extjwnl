<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>all</id>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${project.build.directory}/dist/bin</directory>
            <includes/>
            <fileMode>755</fileMode>
            <outputDirectory>bin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/dist/lib</directory>
            <includes/>
            <excludes>
                <exclude>**/maven-metadata-appassembler.xml</exclude>
            </excludes>
            <fileMode>755</fileMode>
            <outputDirectory>lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/dist/etc</directory>
            <includes/>
            <fileMode>755</fileMode>
            <outputDirectory>etc</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/../..</directory>
            <includes>
                <include>README.md</include>
                <include>license.txt</include>
                <include>changes.txt</include>
            </includes>
            <outputDirectory/>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/../src/</directory>
            <includes>
                <include>**</include>
            </includes>
            <outputDirectory>src/utilities/src</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/../../extjwnl/src/</directory>
            <includes>
                <include>**</include>
            </includes>
            <outputDirectory>src/extjwnl/src</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/../doc/</directory>
            <includes>
                <include>**</include>
            </includes>
            <outputDirectory>doc</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/../../extjwnl/doc/</directory>
            <includes>
                <include>**</include>
            </includes>
            <outputDirectory>doc</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/../</directory>
            <includes>
                <include>pom.xml</include>
            </includes>
            <outputDirectory>src/utilities</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/../../extjwnl/</directory>
            <includes>
                <include>pom.xml</include>
            </includes>
            <outputDirectory>src/extjwnl</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/../../</directory>
            <includes>
                <include>pom.xml</include>
            </includes>
            <outputDirectory>src/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/../../extjwnl/target/apidocs</directory>
            <includes>
                <include>**</include>
            </includes>
            <outputDirectory>doc/apidocs/extjwnl</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/apidocs</directory>
            <includes>
                <include>**</include>
            </includes>
            <outputDirectory>doc/apidocs/utilities</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>